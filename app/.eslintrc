{
    "extends": "airbnb",
    "parser": "babel-eslint",

    "parserOptions": {

        "ecmaVersion": 7,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "arrowFunctions": true,
            "classes": true,
            "spread": true,
        },
    },
    "env": {
        "es6": true,
        "browser": true,

    },
    "rules": {
       "linebreak-style": [0],
        "import/extensions": [2, {
            "js": "never",
            "json": "always",
            "jsx": "always"
        }],

        "react/prefer-stateless-function": [1, {
            "ignorePureComponents": true
        }],
        "indent": ["error", 4],
        "react/jsx-indent": [2, 4],
        "comma-dangle": ["error", "never"],
        "max-len": ["error", 120],

        "no-alert": [0],
        "no-console": [0],
        "no-param-reassign": ["error", { "props": false }],
        "jsx-a11y/anchor-has-content": 'error',
    },


}
